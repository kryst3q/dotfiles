general {
  output_format = "i3bar"
  colors = true
  interval = 5
}

order += "disk /"
order += "memory"
order += "battery 0"
order += "tztime local"

battery 0 {
  format = "BATTERY: %status %percentage"
  format_down = "No battery"
  status_chr = "âš¡"
  status_bat = "ðŸ”‹"
  status_unk = "?"
  status_full = "â˜»"
  path = "/sys/class/power_supply/BAT%d/uevent"
  low_threshold = 10
}

tztime local {
  format = "%Y-%m-%d %H:%M"
}

memory {
  format = "RAM: %used used"
  threshold_degraded = "10%"
  format_degraded = "RAM: %free left"
}

disk "/" {
  format = "DISK: %free left"
}

